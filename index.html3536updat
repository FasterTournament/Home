    <script>
        // প্রোগ্রেস বার এনিমেশন
        const progressBar = document.querySelector('.progress-bar');
        let progress = 65;
        let increasing = true;
        
        setInterval(() => {
            if (increasing) {
                progress += 0.5;
                if (progress >= 70) increasing = false;
            } else {
                progress -= 0.5;
                if (progress <= 65) increasing = true;
            }
            
            progressBar.style.width = progress + '%';
        }, 300);
        
        // স্বাগত বার্তা
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(() => {
                alert('সার্ভার রক্ষণাবেক্ষণের জন্য অসুবিধার জন্য আমরা ক্ষমাপ্রার্থী। আপনার সহযোগিতার জন্য ধন্যবাদ।');
            }, 1000);
        });
    </script>
